                            <Button x:Name="Download" Height="20" Width="20" Margin="178,347,13,-164" RenderTransformOrigin="0.5,0.535" Canvas.Left="4" Canvas.Top="10">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Border CornerRadius="15" Background="Transparent">
                                            <Grid>
                                                <Image Stretch="Fill" Source="../sources/download_icon.png" Height="20" Width="20" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
